(in-package :shiritori)

(defun call-mappr ()
  "For initial set-up of JLPT Nx corpus."
  (mappr 'maphash (k v)
    ((setf *kanji* (push k *kanji*))
      (when v
        (if (search " " v)
          (setf v (string-trim '(#\/ #\space) (subseq v (search " " v) (search " " v :from-end t)))))
        (if (not (equal (remove #\/ v) ""))
                (setf *kana* (push (remove #\/ v) *kana*))))) *dict*))

